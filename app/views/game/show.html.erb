<h1>Scythe</h1>

<p><strong>Turn:</strong> <%= @turn %></p>
<p><strong>Current Player:</strong> <%= @current_player %></p>

<%= button_to "End Turn", "/end_turn", method: :post %>

<h2>Players</h2>
<ul>
  <% @players.each do |p| %>
    <li><%= p %> <%= "<<" if p == @current_player %></li>
  <% end %>
</ul>
